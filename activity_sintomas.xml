<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SintomasActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagen capturada"
            android:scaleType="centerInside"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="342dp"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Indique los sÃ­ntomas del paciente"
            android:textSize="24sp" />
        <TextView
            android:layout_width="182dp"
            android:layout_height="45dp"
            android:text="Grado de Dolor"
            android:textAlignment="viewStart"
            android:textSize="24sp" />
        <SeekBar
            android:id="@+id/seekBarDolor"
            android:layout_width="382dp"
            android:layout_height="28dp"
            android:max="5"
            android:progress="0" />
        <TextView
            android:id="@+id/tvDolorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="179dp"
            android:layout_height="43dp"
            android:text="Rigidez Matutina"
            android:textSize="24sp" />
        <SeekBar
            android:id="@+id/seekBarRigidez"
            android:layout_width="381dp"
            android:layout_height="32dp"
            android:max="5"
            android:progress="0" />
        <TextView
            android:id="@+id/tvRigidezValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="123dp"
            android:layout_height="44dp"
            android:text="Factor R:"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/factorREditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="161dp"
            android:layout_height="87dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Continuar"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
